<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar3"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Show file size"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:id="@+id/textView" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sizeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:checked="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Choose font"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:id="@+id/textView1" />

            <RadioGroup
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:id="@+id/rgAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/op1"
                    android:textSize="17sp"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arial" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/op2"
                    android:textSize="17sp"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calibri" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/op3"
                    android:textSize="17sp"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comic" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/op4"
                    android:textSize="17sp"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consola" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rgAnswer"
                android:textSize="25sp"
                android:text="Font Size"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:id="@+id/textView2" />

            <EditText
                android:id="@+id/etSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:inputType="number"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="10dp"
                android:text="18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etSize"
                android:textSize="25sp"
                android:text="Vibrate effects"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:id="@+id/tv5" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/ss2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:checked="true"
                android:layout_alignBaseline="@+id/tv5"
                android:layout_marginRight="10dp"
                android:text=""/>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>




</RelativeLayout>